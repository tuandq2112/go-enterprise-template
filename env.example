# Server Configuration
PORT=8080

# Database Configuration
# Supported types: postgres, mysql, mongodb
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=clean_ddd_db

# Database Connection Pool Configuration
# Write Database
WRITE_DB_TYPE=postgres
WRITE_DB_HOST=localhost
WRITE_DB_PORT=5432
WRITE_DB_USER=postgres
WRITE_DB_PASSWORD=password
WRITE_DB_NAME=clean_ddd_write_db
WRITE_DB_MAX_OPEN_CONNS=25
WRITE_DB_MAX_IDLE_CONNS=5
WRITE_DB_CONN_MAX_LIFETIME=5m
WRITE_DB_CONN_MAX_IDLE_TIME=5m

# Read Database
READ_DB_TYPE=mongodb
READ_DB_HOST=localhost
READ_DB_PORT=27017
READ_DB_USER=admin
READ_DB_PASSWORD=password
READ_DB_NAME=clean_ddd_read_db
READ_DB_URI=mongodb://admin:password@localhost:27017
READ_DB_COLLECTION=users
READ_DB_MAX_OPEN_CONNS=25
READ_DB_MAX_IDLE_CONNS=5
READ_DB_CONN_MAX_LIFETIME=5m
READ_DB_CONN_MAX_IDLE_TIME=5m

# Event Database
EVENT_DB_TYPE=postgres
EVENT_DB_HOST=localhost
EVENT_DB_PORT=5432
EVENT_DB_USER=postgres
EVENT_DB_PASSWORD=password
EVENT_DB_NAME=clean_ddd_event_db
EVENT_DB_COLLECTION=events
EVENT_DB_MAX_OPEN_CONNS=25
EVENT_DB_MAX_IDLE_CONNS=5
EVENT_DB_CONN_MAX_LIFETIME=5m
EVENT_DB_CONN_MAX_IDLE_TIME=5m

# MySQL specific (when DB_TYPE=mysql)
DB_CHARSET=utf8mb4
DB_PARSE_TIME=true
DB_LOC=Local

# MongoDB specific (when DB_TYPE=mongodb)
DB_COLLECTION=users

# Message Broker Configuration
# Supported types: kafka, rabbitmq, redis, nats
MESSAGE_BROKER_TYPE=kafka
MESSAGE_BROKER_BROKERS=localhost:9092

# Kafka specific (when MESSAGE_BROKER_TYPE=kafka)
MESSAGE_BROKER_GROUP_ID=user-service

# RabbitMQ specific (when MESSAGE_BROKER_TYPE=rabbitmq)
MESSAGE_BROKER_EXCHANGE=user-events
MESSAGE_BROKER_QUEUE=user-events

# Redis specific (when MESSAGE_BROKER_TYPE=redis)
MESSAGE_BROKER_CHANNEL=user-events

# NATS specific (when MESSAGE_BROKER_TYPE=nats)
MESSAGE_BROKER_SUBJECT=user.events

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=text
LOG_OUTPUT=stdout
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28
LOG_COMPRESS=true
LOG_CALLER=true
LOG_STACKTRACE=true

# Tracing Configuration
TRACING_ENABLED=true
TRACING_SERVICE_NAME=go-clean-ddd-es-template
TRACING_ENDPOINT=http://localhost:4318/v1/traces

# Authentication Configuration
AUTH_PRIVATE_KEY_PATH=./keys/private.pem
AUTH_PUBLIC_KEY_PATH=./keys/public.pem
AUTH_TOKEN_EXPIRY=24 